    [5423])

# Fit exponential
startdat = pd.Timestamp("2020/03/01")
x_csse = pd.Series([cvdf.dat_to_int(dat_csse) for dat_csse in csse_dats],
                   index=csse_dats)
fit_csse = np.poly1d(
    np.polyfit(x_csse[startdat:], coviddata_csse_log[startdat:], 1))
fitdata_csse_log = pd.Series(
    fit_csse(x_csse[startdat:]),
    index=csse_dats[startdat:],
)
fitdata_csse = pd.Series(
    np.exp(np.log(10) * fit_csse(x_csse[startdat:])),
    index=csse_dats[startdat:],
)
fitfactor_csse = fitdata_csse / fitdata_csse.shift(1)

x_rki = np.array([cvdf.dat_to_int(dat_rki) for dat_rki in rki_dats])
fit_rki = np.poly1d(np.polyfit(x_rki, np.array(coviddata_rki_log), 1))
fitdata_rki_log = pd.Series(
    fit_rki(x_rki),
    index=rki_dats,
)
fitdata_rki = pd.Series(
    np.exp(np.log(10) * fit_rki(x_rki)),
    index=rki_dats,
)
fitfactor_rki = fitdata_rki / fitdata_rki.shift(1)

